<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.CustomTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="shipBluApiTextField" alignment="CENTER_LEFT" prefHeight="448.0" prefWidth="581.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.oud.oudshopify.controllers.SettingsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <children>
        <CustomTextField fx:id="shopifyApiTextField" promptText="Shopify API Key"/>
        <CustomTextField fx:id="shopifyStoreUrlTextField" promptText="Shopify Store URL"/>
        <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0">
            <children>
                <Button mnemonicParsing="false" onAction="#onSaveButtonClicked" text="Save"/>
            </children>
        </HBox>
    </children>
</VBox>
